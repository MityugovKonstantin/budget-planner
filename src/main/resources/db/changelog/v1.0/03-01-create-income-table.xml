<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="create-income-table" author="kmityugov">

        <preConditions onFail="MARK_RAN" onFailMessage="Table 'income' is already exists.">
            <not>
                <tableExists tableName="income"/>
            </not>
        </preConditions>

        <createTable tableName="income">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_income"/>
            </column>
            <column name="name" type="VARCHAR"/>
            <column name="uuid" type="UUID"/>
            <column name="amount" type="FLOAT">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE"/>
            <column name="is_done" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="income"/>
        </rollback>

    </changeSet>

</databaseChangeLog>